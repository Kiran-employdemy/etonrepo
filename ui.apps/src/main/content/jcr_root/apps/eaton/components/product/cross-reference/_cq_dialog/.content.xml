<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Cross Reference Component"
          sling:resourceType="cq/gui/components/authoring/dialog"
          helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <herotext
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/section"
                    rel="cq-siteadmin-admin-properties-tabs">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                        margin="{Boolean}false"
                        type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Component Properties - Touch UI"
                            sling:resourceType="granite/ui/components/foundation/section">
                        <items jcr:primaryType="nt:unstructured">
                            <taxonomyAttributes
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldLabel="Facets">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./taxonomyAttributes">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <attribute-value
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Facet"
                                                        multiple="{Boolean}false"
                                                        name="./taxonomyAttributeValue">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <part-type
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Part Type"
                                                                value="part-type"/>
                                                        <brand
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Brand"
                                                                value="Brand"/>
                                                        <sub-brand
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Sub Brand"
                                                                value="Sub_Brand"/>
                                                    </items>
                                                </attribute-value>
                                                <showAsGrid
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                        name="./showAsGrid"
                                                        text="Show as Grid"
                                                        value="true"/>
                                                <facetSearchEnabled
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                        name="./facetSearchEnabled"
                                                        text="Facet Search Enabled"
                                                        value="true"/>
                                                <singleFacetEnabled
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                        name="./singleFacetEnabled"
                                                        text="Single Facet Enabled"
                                                        value="true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </taxonomyAttributes>
                            <defaultSortingOption
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldDescription=""
                                    fieldLabel="Default Sort By Option"
                                    name="./defaultSortingOption">
                                <items jcr:primaryType="nt:unstructured">
                                    <product_no_desc
                                            jcr:primaryType="nt:unstructured"
                                            text="Product Number Descending"
                                            value="product_no_desc"/>
                                    <product_no_asc
                                            jcr:primaryType="nt:unstructured"
                                            text="Product Number Ascending"
                                            value="product_no_asc"/>
                                    <xref_name_asc
                                            jcr:primaryType="nt:unstructured"
                                            text="XRef Name Ascending"
                                            value="xref_name_asc"/>
                                    <xref_name_desc
                                            jcr:primaryType="nt:unstructured"
                                            text="XRef Name Descending"
                                            value="xref_name_desc"/>
                                </items>
                            </defaultSortingOption>
                            <sortByOptions
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    composite="{Boolean}true"
                                    fieldDescription="Select the Sorting option from the dropdown,that you would like to sort the results."
                                    fieldLabel="Sort By Options">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./sortByOptions">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <attribute-value
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Sorting Option"
                                                        id="eaton-pim-scaffolding-tax-dropdown"
                                                        multiple="{Boolean}false"
                                                        name="./sortByOptionsValue">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <product_no_desc
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Product Number Descending"
                                                                value="product_no_desc"/>
                                                        <product_no_asc
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Product Number Ascending"
                                                                value="product_no_asc"/>
                                                        <xref_name_asc
                                                                jcr:primaryType="nt:unstructured"
                                                                text="XRef Name Ascending"
                                                                value="xref_name_asc"/>
                                                        <xref_name_desc
                                                                jcr:primaryType="nt:unstructured"
                                                                text="XRef Name Descending"
                                                                value="xref_name_desc"/>
                                                    </items>
                                                </attribute-value>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </sortByOptions>
                            <hideGlobalFacetSearch
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    fieldDescription="If this is checked the global facet search will not be used."
                                    name="./hideGlobalFacetSearch"
                                    text="Disabled Global Facet Search"
                                    value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </herotext>
        </items>
    </content>
</jcr:root>
