<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <moveproductwizard/>
    <jcr:content
        jcr:mixinTypes="[sling:VanityPath]"
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Products"
        sling:resourceType="granite/ui/components/shell/collectionpage"
        sling:vanityOrder="{Long}100"
        sling:vanityPath="/aem/products"
        consoleId="cq-commerce-products"
        contentPath="${requestPathInfo.suffix}"
        coral2="{Boolean}true"
        currentView="${state[&quot;products.shell.collectionpage.layoutId&quot;].string}"
        modeGroup="cq-commerce-products-admin-childpages"
        omnisearchLocationPath="/libs/granite/omnisearch/content/metadata/product"
        pageURITemplate="/libs/commerce/gui/content/products.html{+id}"
        targetCollection=".cq-commerce-products-admin-childpages">
        <redirector
            jcr:primaryType="nt:unstructured"
            sling:resourceType="commerce/gui/components/common/basepathswrapper"
            allowed="[^(/var/commerce/products(.*))$,^(/etc/commerce/products(.*))$]"
            path="${requestPathInfo.suffix}"
            redirectWhenEmpty="/aem/products.html${commerceProductsBasePath}"
            wrappedResourceType="granite/ui/components/coral/foundation/admin/contentchecker"/>
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[cq.common.wcm,commerce.gui.admin,commerce.gui.products.admin,commerce.gui.collections.addcollectiontoproduct]"/>
        </head>
        <views jcr:primaryType="nt:unstructured">
            <column
                granite:rel="cq-commerce-products-admin-childpages"
                jcr:primaryType="nt:unstructured"
                jcr:title="Column View"
                sling:resourceType="commerce/gui/components/common/basepathswrapper"
                icon="viewColumn"
                layoutId="column"
                limit="{Long}40"
                loadAncestors="{Boolean}true"
                metaResourceType="commerce/gui/components/admin/products/meta"
                modeGroup="cq-commerce-products-admin-childpages"
                path="${requestPathInfo.suffix}"
                previewSrc="/mnt/overlay/commerce/gui/content/products/previewcolumn.html{+id}"
                rootPath="${commerceProductsBasePath}"
                size="${empty requestPathInfo.selectors[1] ? &quot;40&quot; : requestPathInfo.selectors[1]}"
                src="/mnt/overlay/commerce/gui/content/products/jcr:content/views/column{.offset,limit}.html{+id}"
                stateId="products.shell.collectionpage"
                wrappedResourceType="granite/ui/components/coral/foundation/columnview">
                <datasource
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="commerce/gui/components/admin/products/childdatasource"
                    itemResourceType="commerce/gui/components/admin/products/childcolumnitem"
                    limit="${empty requestPathInfo.selectors[1] ? &quot;41&quot; : requestPathInfo.selectors[1] + 1}"
                    offset="${requestPathInfo.selectors[0]}"
                    path="${requestPathInfo.suffix}"/>
            </column>
            <card
                granite:rel="cq-commerce-products-admin-childpages"
                jcr:primaryType="nt:unstructured"
                jcr:title="Card View"
                sling:resourceType="granite/ui/components/coral/foundation/masonry"
                icon="viewCard"
                layoutId="card"
                limit="{Long}20"
                metaResourceType="commerce/gui/components/admin/products/meta"
                modeGroup="cq-commerce-products-admin-childpages"
                path="${requestPathInfo.suffix}"
                rootPath="${commerceProductsBasePath}"
                selectionMode="${state[&quot;products.shell.collectionpage.selectionMode&quot;].boolean}"
                size="${empty requestPathInfo.selectors[1] ? &quot;20&quot; : requestPathInfo.selectors[1]}"
                src="/mnt/overlay/commerce/gui/content/products/jcr:content/views/card{.offset,limit}.html{+id}"
                stateId="products.shell.collectionpage">
                <datasource
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="commerce/gui/components/admin/products/childdatasource"
                    itemResourceType="commerce/gui/components/admin/products/childcard"
                    limit="${empty requestPathInfo.selectors[1] ? &quot;21&quot; : requestPathInfo.selectors[1] + 1}"
                    offset="${requestPathInfo.selectors[0]}"
                    path="${requestPathInfo.suffix}"/>
            </card>
            <list
                granite:rel="cq-commerce-products-admin-childpages"
                jcr:primaryType="nt:unstructured"
                jcr:title="List View"
                sling:resourceType="granite/ui/components/coral/foundation/table"
                icon="viewList"
                layoutId="list"
                limit="{Long}40"
                metaResourceType="commerce/gui/components/admin/products/meta"
                modeGroup="cq-commerce-products-admin-childpages"
                path="${requestPathInfo.suffix}"
                rootPath="${commerceProductsBasePath}"
                rowReorderAction="/bin/wcmcommand?cmd=movePage&amp;srcPath={item}&amp;destPath={item}&amp;before={before}&amp;_charset_=utf-8&amp;"
                selectionMode="row"
                size="${empty requestPathInfo.selectors[1] ? &quot;40&quot; : requestPathInfo.selectors[1]}"
                sortMode="remote"
                src="/mnt/overlay/commerce/gui/content/products/jcr:content/views/list{.offset,limit}.html{+id}{?sortName,sortDir}"
                stateId="products.shell.collectionpage">
                <columns jcr:primaryType="nt:unstructured">
                    <select
                        jcr:primaryType="nt:unstructured"
                        select="{Boolean}true"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Title"
                        sortable="{Boolean}true"/>
                    <modified
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Modified"
                        sortable="{Boolean}true"
                        sortType="date"/>
                    <published
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Published"
                        sortable="{Boolean}true"
                        sortType="date"/>
                </columns>
                <datasource
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="commerce/gui/components/admin/products/childdatasource"
                    itemResourceType="commerce/gui/components/admin/products/childrow"
                    limit="${empty requestPathInfo.selectors[1] ? &quot;41&quot; : requestPathInfo.selectors[1] + 1}"
                    offset="${requestPathInfo.selectors[0]}"
                    path="${requestPathInfo.suffix}"/>
            </list>
        </views>
        <breadcrumbs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/commons/ui/shell/datasources/breadcrumbs"
            path="${requestPathInfo.suffix}"
            rootPath="${commerceProductsBasePath}"
            rootTitle="Products"/>
        <actions jcr:primaryType="nt:unstructured">
            <primary jcr:primaryType="nt:unstructured"/>
            <secondary jcr:primaryType="nt:unstructured">
                <create
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/pulldown"
                    text="Create"
                    variant="primary">
                    <items jcr:primaryType="nt:unstructured">
                        <createproduct
                            granite:rel="cq-commerce-products-createproduct-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.link"
                            relScope="collection"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Product">
                            <data
                                jcr:primaryType="nt:unstructured"
                                href.uritemplate="/mnt/overlay/commerce/gui/content/products/createproductwizard.html{+id}"/>
                        </createproduct>
                        <createfolder
                            granite:rel="cq-commerce-products-createfolder-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.dialog"
                            relScope="collection"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Folder">
                            <data
                                jcr:primaryType="nt:unstructured"
                                nesting="hide"
                                src.uritemplate="/mnt/overlay/wcm/core/content/coral/common/createfolderdialog.html{+id}"/>
                        </createfolder>
                        <importproducts
                            granite:rel="cq-commerce-products-import-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.link"
                            relScope="collection"
                            target=".cq-commerce-products-admin-childpages"
                            text="Import Products">
                            <data
                                jcr:primaryType="nt:unstructured"
                                href.uritemplate="/libs/commerce/gui/content/products/importproductswizard.html{+id}"/>
                        </importproducts>
                        <createvariation
                            granite:rel="cq-commerce-products-createvariation-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.link"
                            relScope="collection"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Variant">
                            <data
                                jcr:primaryType="nt:unstructured"
                                href.uritemplate="/mnt/overlay/commerce/gui/content/products/createvariationwizard.html{+id}"/>
                        </createvariation>
                    </items>
                </create>
            </secondary>
            <selection jcr:primaryType="nt:unstructured">
                <create
                    granite:class="foundation-collection-action"
                    granite:rel="cq-commerce-products-create-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/pulldown"
                    activeSelectionCount="single"
                    icon="add"
                    ignoreRel="{Boolean}false"
                    relScope="collection"
                    text="Create"
                    variant="actionBar">
                    <items jcr:primaryType="nt:unstructured">
                        <createfolder
                            granite:rel="cq-commerce-products-createfolder-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.dialog"
                            relScope="item"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Folder">
                            <data
                                jcr:primaryType="nt:unstructured"
                                nesting="hide"
                                src.uritemplate="/mnt/overlay/wcm/core/content/coral/common/createfolderdialog.html{+id}"/>
                        </createfolder>
                        <createproduct
                            granite:rel="cq-commerce-products-createproduct-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.link"
                            relScope="item"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Product">
                            <data
                                jcr:primaryType="nt:unstructured"
                                href.uritemplate="/mnt/overlay/commerce/gui/content/products/createproductwizard.html{+id}"/>
                        </createproduct>
                        <createvariation
                            granite:rel="cq-commerce-products-createvariation-activator"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                            action="foundation.link"
                            activeSelectionCount="single"
                            relScope="item"
                            target=".cq-commerce-products-admin-childpages"
                            text="Create Variation">
                            <data
                                jcr:primaryType="nt:unstructured"
                                href.uritemplate="/mnt/overlay/commerce/gui/content/products/createvariationwizard.html{+item}"/>
                        </createvariation>
                    </items>
                </create>
                <viewproperties
                    granite:rel="foundation-admin-properties-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    actionConfigName="granite/ui/shell/actions/properties"
                    activeSelectionCount="single"
                    icon="infoCircle"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="View Properties"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/commerce/gui/content/products/properties.html{?item*}"/>
                </viewproperties>
                <viewfolderproperties
                    granite:rel="cq-commerce-products-folderproperties-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    actionConfigName="granite/ui/shell/actions/properties"
                    activeSelectionCount="single"
                    icon="infoCircle"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="View Properties"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/commerce/gui/content/products/folderproperties.html{+item}"/>
                </viewfolderproperties>
                <addtocollection
                    granite:rel="cq-commerce-collections-addcollectiontoproduct-activator cq-commerce-collectionpicker-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    activeSelectionCount="multiple"
                    icon="collectionAddTo"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Add To Collection"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="#"
                        root="${commerceCollectionsBasePath}"/>
                </addtocollection>
                <moveproduct
                    granite:rel="cq-commerce-products-move-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    actionConfigName="granite/ui/shell/actions/move"
                    activeSelectionCount="single"
                    icon="move"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Move"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/commerce/gui/content/products/moveproductwizard.html{+item}"/>
                </moveproduct>
                <movefolder
                    granite:rel="cq-commerce-products-movefolder-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    actionConfigName="granite/ui/shell/actions/move"
                    activeSelectionCount="single"
                    icon="move"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Move"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/wcm/core/content/sites/movepagewizard.html{+item}"/>
                </movefolder>
                <publish
                    granite:rel="cq-commerce-products-publish-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="cq.wcm.publish"
                    activeSelectionCount="multiple"
                    icon="globe"
                    ignoreRel="{Boolean}true"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Publish"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        referenceSrc.url="/libs/wcm/core/content/reference.json?_charset_=utf-8{&amp;path*}"
                        wizardSrc.uritemplate="/mnt/overlay/wcm/core/content/sites/publishpagewizard.html?_charset_=utf-8{&amp;item*}"/>
                </publish>
                <publish-later
                    granite:rel="cq-commerce-products-publish-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    activeSelectionCount="multiple"
                    icon="globeClock"
                    ignoreRel="{Boolean}true"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Publish later"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/wcm/core/content/sites/publishpagewizard.html?later&amp;_charset_=utf-8{&amp;item*}"/>
                </publish-later>
                <unpublish
                    granite:rel="cq-commerce-products-unpublish-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="cq.wcm.unpublish"
                    activeSelectionCount="multiple"
                    icon="globeStrike"
                    ignoreRel="{Boolean}true"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Unpublish"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        referenceSrc.url="/bin/wcm/references.json?_charset_=utf-8{&amp;path*}"/>
                </unpublish>
                <unpublish-later
                    granite:rel="cq-commerce-products-unpublish-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    activeSelectionCount="multiple"
                    icon="globeStrikeClock"
                    ignoreRel="{Boolean}true"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Unpublish later"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/wcm/core/content/sites/unpublishpagewizard.html?later&amp;_charset_=utf-8{&amp;item*}"/>
                </unpublish-later>
                <deletepage
                    granite:rel="cq-commerce-products-delete-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="cq.wcm.delete"
                    actionConfigName="granite/ui/shell/actions/delete"
                    activeSelectionCount="multiple"
                    icon="delete"
                    relScope="item"
                    target=".cq-commerce-products-admin-childpages"
                    text="Delete"
                    variant="actionBar"/>
                <Copy
                    granite:rel="foundation-admin-properties-activator"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                    action="foundation.link"
                    activeSelectionCount="single"
                    icon="copy"
                    target=".cq-commerce-products-admin-childpages"
                    text="Duplicate"
                    variant="actionBar">
                    <data
                        jcr:primaryType="nt:unstructured"
                        href.uritemplate="/mnt/overlay/commerce/gui/content/products/properties.duplicate.html{?item*}"/>
                </Copy>
            </selection>
        </actions>
        <rails jcr:primaryType="nt:unstructured">
            <references
                granite:class="cq-rail-references"
                jcr:primaryType="nt:unstructured"
                jcr:title="References"
                sling:resourceType="granite/ui/components/coral/foundation/panel/railpanel">
                <items jcr:primaryType="nt:unstructured">
                    <references
                        jcr:primaryType="nt:unstructured"
                        jcr:title="References"
                        sling:resourceType="granite/ui/references/components/coral/references"
                        adminUrl="/aem/products.html"
                        text="References">
                        <items jcr:primaryType="nt:unstructured">
                            <list
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/contsys"
                                class="list">
                                <items jcr:primaryType="nt:unstructured">
                                    <contents
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/references/components/coral/group"
                                        title="Links">
                                        <items jcr:primaryType="nt:unstructured">
                                            <lent
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/references/components/coral/type"
                                                clientLibs="[cq.gui.coral.common.admin.references.shortenedlinks]"
                                                itemResourceType="commerce/gui/components/admin/products/reference"
                                                title="Product Pages"
                                                type="product"/>
                                        </items>
                                    </contents>
                                </items>
                            </list>
                        </items>
                    </references>
                </items>
            </references>
            <omnisearchfilter
                jcr:primaryType="nt:unstructured"
                jcr:title="Filter"
                sling:resourceType="granite/ui/components/coral/foundation/panel/railpanel"/>
        </rails>
    </jcr:content>
    <createvariationwizard/>
    <createproductwizard/>
    <importproductswizard/>
    <previewcolumn
        jcr:primaryType="nt:unstructured"
        sling:resourceType="commerce/gui/components/admin/products/childcolumnpreview"
        path="${requestPathInfo.suffix}"/>
    <productpicker/>
    <folderproperties/>
    <properties/>
</jcr:root>
