<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Support"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <globalSupportNumber
                                cq:hideOnEdit="{Boolean}false"
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                cq-msm-lockable="globalSupportNumber"
                                fieldLabel="Global Support Number"
                                name="./globalSupportNumber"/>
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="globalSupportNumber"/>
                        <tollFreeSupportNumber
                            cq:hideOnEdit="{Boolean}false"
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            cq-msm-lockable="tollFreeSupportNumber"
                            fieldLabel="Toll Free Support Number"
                            name="./tollFreeSupportNumber"/>
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="callTollFreeSupportNumber"/>
                        <callerPaidSupportNumber
                            cq:hideOnEdit="{Boolean}false"
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            cq-msm-lockable="callerPaidSupportNumber"
                            fieldLabel="Caller Paid Support Number"
                            name="./callerPaidSupportNumber"/>
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-msm-lockable="callerPaidSupportNumber"/>
                    </items>
                </column>
            </items>
        </column>
    </items>
</jcr:root>
