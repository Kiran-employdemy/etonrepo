<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Media Gallery"
          sling:resourceType="cq/gui/components/authoring/dialog"
          helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                margin="{Boolean}false"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <galleryHeadline
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Gallery Headline *"
                            name="./galleryHeadline"
                            required="true"/>
                    <galleryDesc
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textarea"
                            fieldDescription="This field stores the Gallery description."
                            fieldLabel="Gallery Description *"
                            name="./galleryDesc"
                            required="true"/>
                    <listType
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            class="cq-dialog-dropdown-showhide"
                            cq-dialog-dropdown-showhide-target=".gallery-hide-show"
                            fieldLabel="List Type"
                            name="./listType">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".gallery-hide-show"/>

                        <items jcr:primaryType="nt:unstructured">
                            <childpage
                                    jcr:primaryType="nt:unstructured"
                                    text="Child page"
                                    value="child-pages"/>
                            <tags
                                    jcr:primaryType="nt:unstructured"
                                    text="Tags"
                                    value="tags"/>
                            <fixed
                                    jcr:primaryType="nt:unstructured"
                                    text="Fixed"
                                    value="fixed-list"/>
                            <manual
                                    jcr:primaryType="nt:unstructured"
                                    text="Manual"
                                    value="manual-list"/>
                        </items>
                    </listType>
                    <parentPage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            granite:class="hide gallery-hide-show"
                            fieldDescription="This field stores the value of parent page path. This field is applicable when List Type selected is “Child Page”."
                            fieldLabel="Parent Page"
                            name="./parentPage"
                            rootPath="/content/dam">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="child-pages"/>
                    </parentPage>
                    <tags
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/common/tagspicker"
                            class="hide gallery-hide-show"
                            fieldDescription="This field stores the value of tags field. This field is applicable when List Type selected is “Tags”."
                            fieldLabel="Tags"
                            name="./tags"
                            showhidetargetvalue="tags">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="tags"/>
                    </tags>
                    <tagsType
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            granite:class="hide gallery-hide-show"
                            fieldLabel="Tags Type"
                            name="./tagsType">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="tags"/>
                        <items jcr:primaryType="nt:unstructured">
                            <any
                                    jcr:primaryType="nt:unstructured"
                                    text="Any"
                                    value="any"/>
                            <all
                                    jcr:primaryType="nt:unstructured"
                                    text="All"
                                    value="all"/>
                        </items>
                    </tagsType>
                    <fixedLinks
                            granite:class="hide gallery-hide-show"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldDescription="This field stores the various attributes of fixed link object. This field is applicable when List Type selected is “Fixed”"
                            fieldLabel="Fixed Links">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="fixed-list"/>
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./fixedLinks">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        class="multifield-border">
                                    <items jcr:primaryType="nt:unstructured">
                                        <imagePath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="This field stores the image"
                                                fieldLabel="Image Path"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./imagePath"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./imageName"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        <imageAltText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Image Alt Text"
                                                name="./imageAltText"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </fixedLinks>
                    <manualLinks
                            granite:class="hide gallery-hide-show"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldDescription="This field stores the various attributes of manual link object. This field is applicable when List Type selected is “Manual”"
                            fieldLabel="Manual Links">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="manual-list"/>
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./manualLinks">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        class="multifield-border">
                                    <items jcr:primaryType="nt:unstructured">
                                        <galleryAssetTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="This field stores the path for Link Title of the page. This field is applicable when List Type selected is “Manual”"
                                                fieldLabel="Gallery Asset Title"
                                                name="./galleryAssetTitle"/>
                                        <galleryImagePath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="This field stores the image"
                                                fieldLabel="Image Path"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./galleryImagePath"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"
                                                name="./imageName"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        <manualListGalleryImageAltText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Manual List Gallery Image Alt Text"
                                                name="./manualListGalleryImageAltText"/>
                                        <galleryAssetDesc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Gallery Asset Description"
                                                name="./galleryAssetDesc"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </manualLinks>
                    <sort
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            granite:class="hide gallery-hide-show"
                            fieldDescription="This field stores the value of sort field. There are four options: Publication Date, Title, Created Date, Last Modified and Template. This field is applicable when List Type selected is “Child Page” or “Tags”"
                            fieldLabel="Sort *"
                            name="./sort"
                            required="true"
                            showhidetargetvalue="child-pages,tags">
                        <items jcr:primaryType="nt:unstructured">
                            <created-date
                                    jcr:primaryType="nt:unstructured"
                                    text="Created Date"
                                    value="created-date"/>
                            <last-modified
                                    jcr:primaryType="nt:unstructured"
                                    text="Last Modified "
                                    value="last-modified-date"/>
                        </items>
                    </sort>
                    <limit
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/numberfield"
                            granite:class="hide gallery-hide-show"
                            fieldDescription="This field stores the value for no of results field"
                            fieldLabel="Gallery limit"
                            min="{Long}0"
                            name="./limit"
                            showhidetargetvalue="child-pages,tags"/>
                    <desktopconfiguration
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Desktop Image Transformation"
                            name="./desktopTrans">
                        <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/ecom/content/imageTransform"
                                addNone="{Boolean}true"
                                selector="desktop"/>
                    </desktopconfiguration>
                    <thumbnailconfiguration
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Thumbnail Image Transformation"
                            name="./thumbnailTrans">
                        <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/ecom/content/imageTransform"
                                addNone="{Boolean}true"
                                selector="desktop"/>
                    </thumbnailconfiguration>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
