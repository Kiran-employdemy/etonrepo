<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Contact List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <rootPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="The only content fragments that will be viable to be included are the ones below the selected path."
                        fieldLabel="Parent Path"
                        rootPath="/content/dam"
                        name="./parentPath" />
                    <tags
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/common/tagspicker"
                        fieldDescription="Any 'Person' content fragment associated to any selected tag will be listed."
                        fieldLabel="Tags"
                        name="./cq:tags"/>
                    <listMethod
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="List method"
                        fieldDescription="If 'Any' is chosen then any person that has any of the selected tags will be listed. If 'All' is chosen then only people tagged with every selected tag will be listed."
                        name="./listMethod"
                        required="true">
                        <items jcr:primaryType="nt:unstructured">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="Any"
                                value="any"/>
                            <inline
                                jcr:primaryType="nt:unstructured"
                                text="All"
                                value="all"/>
                        </items>
                    </listMethod>
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading"
                        name="./heading" />
                    <showEmail
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        name="./showEmail"
                        text="Show email"
                        value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
