<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Related Products"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <section
                jcr:primaryType="nt:unstructured"
                jcr:title="Related Products Component Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <productsHeader
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Header"
                                name="./productsHeader"/>
                            <productsDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="Product Description "
                                fieldLabel="Description *"
                                name="./productsDescription"
                                required="true"/>
                            <listType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".related-products-hide-show"
                                fieldLabel="List Type *"
                                name="./listType"
                                required="true">
                                <items jcr:primaryType="nt:unstructured">
                                    <child-pages
                                        jcr:primaryType="nt:unstructured"
                                        text="Child Page"
                                        value="child-pages"/>
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        text="Tags"
                                        value="tags"/>
                                    <fixed-list
                                        jcr:primaryType="nt:unstructured"
                                        text="Fixed List"
                                        value="fixed-list"/>
                                    <manual-list
                                        jcr:primaryType="nt:unstructured"
                                        text="Manual List"
                                        value="manual-list"/>
                                </items>
                            </listType>
                            <parentPage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="eaton/components/widgets/contextualpathbrowser"
                                class="hide related-products-hide-show"
                                fieldLabel="Parent Page *"
                                name="./parentPage"
                                required="true"
                                showhidetargetvalue="child-pages"/>
                            <tags
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                class="hide related-products-hide-show"
                                fieldLabel="Tags *"
                                name="./tags"
                                required="true"
                                showhidetargetvalue="tags"/>
                            <tagsType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="hide related-products-hide-show"
                                fieldLabel="Tags Type *"
                                name="./tagsType"
                                required="true"
                                showhidetargetvalue="tags">
                                <items jcr:primaryType="nt:unstructured">
                                    <any
                                        jcr:primaryType="nt:unstructured"
                                        text="Any"
                                        value="any"/>
                                    <all
                                        jcr:primaryType="nt:unstructured"
                                        text="All"
                                        value="all"/>
                                </items>
                            </tagsType>
                            <openNewWindow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                class="hide related-products-hide-show"
                                name="./openNewWindow"
                                showhidetargetvalue="child-pages,tags"
                                text="Open in New Window (Parent, Tags)"
                                value="true"/>
                            <fixedLinks
                                granite:class="hide related-products-hide-show"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Fixed Links">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="fixed-list"/>
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./fixedLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkPath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="eaton/components/widgets/contextualpathbrowser"
                                                    fieldLabel="Link Path *"
                                                    name="./fixedLinkPath"
                                                    required="true"/>
                                                <newWindowFixed
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./fixedLinkOpenNewWindow"
                                                    text="Open Link in New Window"
                                                    value="true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </fixedLinks>
                            <manualLinkList
                                granite:class="hide related-products-hide-show"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Manual Links">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="manual-list"/>
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./manualLinkList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <manualLinkImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Image *"
                                                    fileNameParameter="./fileName"
                                                    fileReferenceParameter="./manualLinkImage"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./imageName"
                                                    required="true"
                                                    title="Upload Image Asset"
                                                    uploadUrl="${suffix.path}"
                                                    useHTML5="{Boolean}true"/>
                                                <manualLinkImageAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Image Alt Text"
                                                    name="./manualLinkImageAltText"/>
                                                <manualLinkEyebrow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Eyebrow *"
                                                    name="./manualLinkEyebrow"
                                                    required="true"/>
                                                <manualLinkTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Link Title *"
                                                    name="./manualLinkTitle"
                                                    required="true"/>
                                                <manualLinkPath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="eaton/components/widgets/contextualpathbrowser"
                                                    fieldLabel="Link Path *"
                                                    name="./manualLinkPath"
                                                    required="true"/>
                                                <manualLinkOpenNewWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./manualLinkOpenNewWindow"
                                                    text="Open in New Window"
                                                    value="true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </manualLinkList>
                            <sortBy
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="hide related-products-hide-show"
                                fieldDescription="This field stores the value of sort field. There are four options: Publication Date, Title, Created Date, Last Modified and Template. This field is applicable when List Type selected is “Child Page” or “Tags”"
                                fieldLabel="Sort By *"
                                name="./sortBy"
                                required="true"
                                showhidetargetvalue="child-pages,tags">
                                <items jcr:primaryType="nt:unstructured">
                                    <publication-date
                                        jcr:primaryType="nt:unstructured"
                                        text="Publication Date"
                                        value="pub-date"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        text="Title"
                                        value="title"/>
                                    <created-date
                                        jcr:primaryType="nt:unstructured"
                                        text="Created Date"
                                        value="created-date"/>
                                    <last-modified
                                        jcr:primaryType="nt:unstructured"
                                        text="Last Modified "
                                        value="last-modified-date"/>
                                    <template
                                        jcr:primaryType="nt:unstructured"
                                        text="Template"
                                        value="template"/>
                                </items>
                            </sortBy>
                            <maxLimitToDisplay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                class="hide related-products-hide-show"
                                defaultValue="40"
                                fieldDescription="This field stores the value for no of results field. This field is applicable when List Type selected is “Child Page” or “Tags”"
                                fieldLabel="Maximum number of links to Display"
                                min="{Long}0"
                                name="./maxLimitToDisplay"
                                showhidetargetvalue="child-pages,tags"/>
                            <desktopTrans
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Desktop Image Transformation *"
                                name="./desktopTrans"
                                required="true">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="/ecom/content/imageTransform"
                                    addNone="{Boolean}true"
                                    selector="desktop"/>
                            </desktopTrans>
                            <mobileTrans
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Mobile Image Transformation *"
                                name="./mobileTrans"
                                required="true">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="/ecom/content/imageTransform"
                                    addNone="{Boolean}true"
                                    selector="mobile"/>
                            </mobileTrans>
                        </items>
                    </column>
                </items>
            </section>
        </items>
    </content>
</jcr:root>
