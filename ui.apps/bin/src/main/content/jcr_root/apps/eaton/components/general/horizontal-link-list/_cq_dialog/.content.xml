<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Horizontal Link List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <horizontalLinkList
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldDescription="This field stores the various attributes of Horizontal Link List."
                        fieldLabel="Horizontal Link List">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./horizontalLinkList">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    class="multifield-border">
                                    <items jcr:primaryType="nt:unstructured">
                                        <horizontalLinkTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="This field stores the value for Horizontal Link Title."
                                            fieldLabel="Link Title"
                                            name="./horizontalLinkTitle"/>
                                        <horizontalLinkPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="eaton/components/widgets/contextualpathbrowser"
                                            fieldDescription="This field stores the path. This field is applicable when List Type selected is “Fixed”"
                                            fieldLabel="Link Path"
                                            name="./horizontalLinkPath"/>
                                        <horizontalLinkOpenNewWindow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="This field stores the value for newWindow field. This field is applicable when List Type selected is “Fixed”"
                                            name="./horizontalLinkOpenNewWindow"
                                            text="Open in New Window"
                                            value="true"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </horizontalLinkList>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
