<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Category Hero"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Carousel">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <herotext
                jcr:primaryType="nt:unstructured"
                jcr:title="TTIL  List Properties"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <imagePath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="This field stores the bg image of Category Hero."
                                fieldLabel="Image Path"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./imagePath"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./imageName"
                                required="true"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <imageAltText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Category Hero image Alt text."
                                fieldLabel="Image Alt Text"
                                name="./imageAltText"/>
                            <alignmentDesktop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Options will align the image using the selected alignment."
                                fieldLabel="Desktop Image Alignment"
                                name="./alignmentDesktop">
                                <items jcr:primaryType="nt:unstructured">
                                    <left-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Top"
                                        value="left-top"/>
                                    <left-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Center"
                                        value="left-center"/>
                                    <left-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Bottom"
                                        value="left-bottom"/>
                                    <center-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Top"
                                        value="center-top"/>
                                    <center-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Center"
                                        value="center-center"/>
                                    <center-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Bottom"
                                        value="center-bottom"/>
                                    <right-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Top"
                                        value="right-top"/>
                                    <right-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Center"
                                        value="right-center"/>
                                    <right-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Bottom"
                                        value="right-bottom"/>
                                </items>
                            </alignmentDesktop>
                            <alignmentMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Options will align the image using the selected alignment."
                                fieldLabel="Mobile Image Alignment"
                                name="./alignmentMobile">
                                <items jcr:primaryType="nt:unstructured">
                                    <left-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Top"
                                        value="left-top"/>
                                    <left-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Center"
                                        value="left-center"/>
                                    <left-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Left Bottom"
                                        value="left-bottom"/>
                                    <center-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Top"
                                        value="center-top"/>
                                    <center-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Center"
                                        value="center-center"/>
                                    <center-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Center Bottom"
                                        value="center-bottom"/>
                                    <right-top
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Top"
                                        value="right-top"/>
                                    <right-center
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Center"
                                        value="right-center"/>
                                    <right-bottom
                                        jcr:primaryType="nt:unstructured"
                                        text="Right Bottom"
                                        value="right-bottom"/>
                                </items>
                            </alignmentMobile>
                            <eyebrowText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Author eyebrow text to override the default eyebrow text"
                                    fieldLabel="Eyebrow Text"
                                    name="./eyebrowText"/>
                            <eyebrowLinkURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                    fieldLabel="Eyebrow Link URL"
                                    name="./eyebrowLinkURL"/>
                            <titleText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="/libs/cq/gui/components/authoring/dialog/richtext"
                                    fieldDescription="Click Enter to create a new paragraph p, Click on MAJ+Ctrl+Enter to break the line "
                                    fieldLabel="Header "
                                    name="./titleText"
                                    useFixedInlineToolbar="{Boolean}true">
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format]">
                                        </inline>
                                        <dialogFullScreen
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format]"/>
                                    </cui>
                                </uiSettings>
                            </titleText>
                            <headerType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Header Type"
                                name="./categoryHeroHeaderType">
                                <items jcr:primaryType="nt:unstructured">
                                    <h1
                                        jcr:primaryType="nt:unstructured"
                                        selected="{Boolean}true"
                                        text="H1"
                                        value="h1"/>
                                    <h2
                                        jcr:primaryType="nt:unstructured"
                                        text="H2"
                                        value="h2"/>
                                </items>
                            </headerType>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/cq/gui/components/authoring/dialog/richtext"
                                fieldDescription="Description of the Category Hero."
                                fieldLabel="Description"
                                name="./description"
                                removeSingleParagraphContainer="{Boolean}true"
                                singleParagraphContainerReplacement="div"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <links
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <table
                                        jcr:primaryType="nt:unstructured"
                                        features="[]">
                                        <hiddenHeaderConfig
                                            jcr:primaryType="nt:unstructured"
                                            hiddenHeaderClassName="cq-wcm-foundation-aria-visuallyhidden"
                                            hiddenHeaderEditingCSS="coral-RichText-hiddenHeader--editing"/>
                                    </table>
                                    <experience-aem
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="styles">
                                        <styles jcr:primaryType="cq:WidgetCollection">
                                            <plainSpan
                                                jcr:primaryType="nt:unstructured"
                                                cssName="defaultSpan"
                                                text="Default (add span tag)"/>
                                            <strikethrough
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-strikethrough"
                                                text="Strike Through"/>
                                            <warning
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-warning"
                                                text="Warning"/>
                                            <note
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-note"
                                                text="Note"/>
                                            <header
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-header"
                                                text="Header"/>
                                            <dark-headline
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-dark-headline"
                                                text="Dark Headline"/>
                                            <smalltext
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-small-text"
                                                text="Small Text"/>
                                            <quote
                                                jcr:primaryType="nt:unstructured"
                                                cssName="rte-quote"
                                                text="Quote"/>
                                        </styles>
                                    </styles>
                                    <experience-aem-one
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <spellcheck
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,#paraformat,image#imageProps,#justify,#lists,links#modifylink,links#unlink,links#anchor,subsuperscript#subscript,subsuperscript#superscript,experience-aem#colorPicker,experience-aem-one#touchuitouppercase,#styles,spellcheck#checktext]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                    ref="justify"/>
                                                <lists
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                    ref="lists"/>
                                                <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                    ref="paraformat"/>
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                            </popovers>
                                        </inline>
                                    </cui>
                                </uiSettings>
                            </description>
							<desktopDynam
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./desktopDynam"
                                                    value=":category-hero-desktop"/>
                            <mobileDynam
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./mobileDynam"
                                                    value=":category-hero-mobile"/>
                        </items>
                    </column>
                </items>
            </herotext>
        </items>
    </content>
</jcr:root>
