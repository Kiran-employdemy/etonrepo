<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    jcr:title="NanoRep Configuration"
    height="{Long}600"
    warnIfModified="{Boolean}false"
    width="{Long}800"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <Chat_x0020_Configuration
                jcr:primaryType="cq:Panel"
                title="NanoRep Configuration"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <chatviews
                        jcr:primaryType="cq:Widget"
                        fieldLabel="NanoRep Views"
                        hideLabel="{Boolean}false"
                        name="./chatviews"
                        title="NanoRep Views"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="{Boolean}true"
                            hideLabel="{Boolean}true"
                            layout="form"
                            padding="10px"
                            width="1000"
                            xtype="multi-field-panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <businessdivision
                                    jcr:primaryType="cq:Widget"
                                    dName="nrbusinessdivision"
                                    fieldDescription="Name of the Business Division"
                                    fieldLabel="Business Division"
                                    width="{Long}300"
                                    xtype="textfield"/>
                                <entrypointid
                                    jcr:primaryType="cq:Widget"
                                    dName="nrentrypointid"
                                    fieldDescription="knowledge base number for corresponding NanoRep view"
                                    fieldLabel="KB Number"
                                    name="./nrentrypointid"
                                    xtype="textfield"/>
                                <aemtags
                                    jcr:primaryType="cq:Widget"
                                    cls="cq-propsdialog-tags"
                                    dName="nraemtags"
                                    fieldDescription="AEM tags that would make given AEM page eligible for this NanoRep view"
                                    fieldLabel="AEM Tags"
                                    name="./nraemtags"
                                    xtype="tags"/>
                                <errmsg
                                    jcr:primaryType="cq:Widget"
                                    dName="nrerrorMsg"
                                    fieldDescription="Message to be displayed to the user in case of invalid configuration values."
                                    fieldLabel="Error Message"
                                    name="./nrerrorMsg"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </chatviews>
                </items>
            </Chat_x0020_Configuration>
        </items>
    </items>
</jcr:root>
