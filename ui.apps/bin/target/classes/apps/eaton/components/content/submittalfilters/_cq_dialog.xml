<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Submittal Filters"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <section
                jcr:primaryType="nt:unstructured"
                jcr:title="Submittal Filters"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                fieldDescription="The title that the user will see in the filter section of submittal builder."
                                name="./title"/>
                            <mobileDialogTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Mobile Dialog Title"
                                fieldDescription="The title that the user will see for filter section in mobile view."
                                name="./mobileDialogTitle"/>
                            <globalFacetSearchDisabled
                                  jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                  fieldDescription="If this is checked the global facet search will not be used."
                                  name="./globalFacetSearchDisabled"
                                  text="Disabled Global Facet Search"
                                  value="true"/>
                            <i18nNotes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/text"
                                text="This component uses the following i18n values: 'Close', 'Results', 'Result', 'of', and 'View More', 'Global.FacetSearch.SearchLabel', 'Global.FacetSearch.Placeholder', 'Global.FacetSearch.NoSugestions', 'Global.FacetSearch.In'."/>
                        </items>
                    </column>
                </items>
            </section>
        </items>
    </content>
</jcr:root>
