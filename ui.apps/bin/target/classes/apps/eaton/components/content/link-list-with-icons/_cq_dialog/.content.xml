<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Link List with Icons"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <section
                jcr:primaryType="nt:unstructured"
                jcr:title="Component Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linkList
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Click 'Add' to add more Link List with Icons Links"
                                fieldLabel="Link List">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./linkList"
                                    required="true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="This field stores the path for Icon"
                                                    fieldLabel="Icon *"
                                                    name="./linkIcon"
                                                    required="true"
                                                    rootPath="/content/dam"/>
                                                <linkTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="This field stores the Icon title"
                                                    fieldLabel="Title *"
                                                    name="./linkTitle"
                                                    required="true"/>
                                                <linkPath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="eaton/components/widgets/contextualpathbrowser"
                                                    fieldDescription="This field stores the path for Icon"
                                                    fieldLabel="Link Path"
                                                    name="./linkPath"/>
                                                <linkOpenNewWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="This field stores the value for newWindow field"
                                                    name="./linkOpenNewWindow"
                                                    text="Open Link in New Window"
                                                    value="true"/>
                                                <isSuffixEnabled
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                        fieldDescription="Enable passing page title"
                                                        name="./isSuffixEnabled"
                                                        text="Enable passing page title"
                                                        value="true"/>
                                                <linkDesc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="This field stores the Icon description."
                                                    fieldLabel="Description"
                                                    name="./linkDesc"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </linkList>
                         </items>
                    </column>
                </items>
            </section>
        </items>
    </content>
</jcr:root>
