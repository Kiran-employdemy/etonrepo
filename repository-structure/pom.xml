<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ====================================================================== -->
    <!-- P A R E N T  P R O J E C T  D E S C R I P T I O N                      -->
    <!-- ====================================================================== -->
    <parent>
        <groupId>com.eaton.platform</groupId>
        <artifactId>eaton_platform_parent</artifactId>
        <version>2.107.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- ====================================================================== -->
    <!-- P R O J E C T  D E S C R I P T I O N                                   -->
    <!-- ====================================================================== -->
    <artifactId>eaton_platform_parent.repository-structure</artifactId>
    <packaging>content-package</packaging>
    <name>eaton_platform_parent - Repository Structure Package</name>
    <description>
        Empty package that defines the structure of the Adobe Experience Manager repository the Code packages in this project deploy into.
        Any roots in the Code packages of this project should have their parent enumerated in the Filters list below.
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.jackrabbit</groupId>
                <artifactId>filevault-package-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <properties>
                        <cloudManagerTarget>none</cloudManagerTarget>&gt;
                    </properties>
                    <filters>
                        <!-- /apps root -->
                        <filter>
                            <root>/apps</root>
                        </filter>
                        <!-- Common overlay roots -->
                        <filter>
                            <root>/apps/sling</root>
                        </filter>
                        /apps/cq/tagging/gui
                        <filter>
                            <root>/apps/granite/ui/components/shell/omnisearch</root>
                        </filter>
                        <filter>
                            <root>/apps/granite/ui/components/coral/foundation/form</root>
                        </filter>
                        <filter>
                            <root>/apps/cq/tagging/gui</root>
                        </filter>
                        <filter>
                            <root>/apps/granite</root>
                        </filter>
                        <filter>
                            <root>/apps/workflow/scripts</root>
                        </filter>
                        <filter>
                            <root>/apps/wcm/core/resources</root>
                        </filter>
                        <filter>
                            <root>/apps/sling/servlet/errorhandler</root>
                        </filter>
                        <filter>
                            <root>/apps/cq/core/content/nav/tools</root>
                        </filter>
                        <filter>
                            <root>/conf/eaton-cummins/settings/wcm</root>
                        </filter>
                        <filter>
                            <root>/apps/fd/af/components/actions</root>
                        </filter>
                        <filter>
                            <root>/apps/fd/af/layouts/panel</root>
                        </filter>
                        <filter>
                            <root>/conf/global/settings/workflow/models</root>
                        </filter>
                        <filter>
                            <root>/apps/granite/ui/references/components/coral</root>
                        </filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/clientlibs</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/contentrenderer/card</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/contentrenderer/row</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin</root></filter>
                        <filter>
                            <root>/apps/dam/gui/content</root>
                        </filter>
                        <filter>
                            <root>/etc/designs</root>
                        </filter>
                        <filter>
                            <root>/apps/tools</root>
                        </filter>
                        <filter>
                            <root>/conf/eaton/settings/dam/cfm/models</root>
                        </filter>
                        <filter>
                            <root>/apps/fd/fm/af</root>
                        </filter>
                        <filter>
                            <root>/etc/reports</root>
                        </filter>
                        <filter>
                            <root>/apps/fd/fm/gui/content</root>
                        </filter>
                        <filter>
                            <root>/apps/cq/workflow/components/model</root>
                        </filter>
                        <filter>
                            <root>/etc/clientlibs/fd/themes/themeLibrary</root>
                        </filter>
                        <filter>
                            <root>/etc/notification</root>
                        </filter>
                        <filter>
                            <root>/conf/global/settings/workflow</root>
                        </filter>
                        <filter>
                            <root>/apps/commerce/gui</root>
                        </filter>
                        <filter>
                            <root>/apps/eaton</root>
                        </filter>
                        <filter>
                            <root>/apps/fd/fm/gui/components/admin/creationwizard</root>
                        </filter>
                        <filter>
                            <root>/etc/importers</root>
                        </filter>
                        <filter>
                            <root>/conf/eaton/settings/wcm</root>
                        </filter>
                        <filter>
                            <root>/apps/wcm/core/content</root>
                        </filter>
                        <filter>
                            <root>/etc/groovyconsole/scripts</root>
                        </filter>
                        <filter>
                            <root>/apps/eaton/settings/wcm</root>
                        </filter>
                        <filter>
                            <root>/apps/dam</root>
                        </filter>
                        <filter>
                            <root>/apps/wcm</root>
                        </filter>
                        <filter>
                            <root>/apps/msm</root>
                        </filter>
                        <filter>
                            <root>/apps/dam/options/predicates</root>
                        </filter>
                        <!-- FM Custom Filters-->
                        <filter><root>/var/workflow/models/eaton-dam</root></filter>
                       <filter><root>/apps/dam/content/predicates</root></filter>
                        <!-- FM Custom Filters-->
                        <filter><root>/var/workflow/models/eaton-dam</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/clientlibs</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/contentrenderer/card</root></filter>
                        <filter><root>/apps/dam/gui/coral/components/admin/contentrenderer/row</root></filter>
                        <filter><root>/apps/dam/gui/components/admin/renderconditions</root></filter>
                        <filter><root>/apps/eaton/clientlibs</root></filter>
                        <filter><root>/apps/eaton/datasource</root></filter>
