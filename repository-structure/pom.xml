                        <filter><root>/apps/dam/gui/coral/components/admin/customsearch/omnisearchpredicates</root></filter>
                        <!-- Asset Link -->
                        <filter><root>/apps/granite/core/components</root></filter>
                        <filter><root>/var/workflow/models</root></filter>
                        <filter><root>/var/dxml/folderprofiles</root></filter>
                        <!-- ACS Commons Reports Configuration -->
                        <filter><root>/var/acs-commons/reports</root></filter>
                    </filters>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>